{
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "workbench.sideBar.location": "left",
    "workbench.colorTheme": "Palenight Theme",
    "workbench.iconTheme": "Monokai Pro Icons",
    "editor.fontSize": 14,
    "window.zoomLevel": 1,
    //   "editor.formatOnSave": true,
    "editor.renderWhitespace": "all",
    "extensions.ignoreRecommendations": false,
    "php-cs-fixer.onsave": false,
    "workbench.startupEditor": "newUntitledFile",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "vim.leader": ",",
    "vim.surround": true,
    "vim.easymotion": true,
    "vim.hlsearch": true,
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "k"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    "vim.otherModesKeyBindingsNonRecursive": [
        {
            "before": [
                "<C-n>"
            ],
            "after": [],
            "commands": [
                {
                    "command": ":nohl",
                    "args": []
                }
            ]
        },
        {
            "before": [
                "leader",
                "w"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.files.save",
                    "args": []
                }
            ]
        },
        {
            "key": "j",
            "command": "list.focusDown",
            "when": "listFocus"
        },
        {
            "key": "k",
            "command": "list.focusUp",
            "when": "listFocus"
        },
        {
            "key": "ctrl+enter",
            "command": "list.select",
            "when": "explorerViewletVisible && filesExplorerFocus"
        },
        {
            "key": "o",
            "command": "list.toggleExpand",
            "when": "listFocus"
        }
    ],
    //advanced new file
    "newFile.defaultBaseFileName": "newFile",
    "newFile.relativeTo": "file", // "root" or "project"
    "newFile.defaultFileExtension": ".ts",
    "newFile.rootDirectory": ".",
    "newFile.showPathRelativeTo": "root", // "project" or "none"
    "newFile.expandBraces": false,
    "editor.renderIndentGuides": false,
    "vsicons.dontShowNewVersionMessage": true, // setting to true will allow for creating multiple files such as `new-folder/{file1,file2}.js`
    "prettier.singleQuote": true,
    "prettier.eslintIntegration": true,
    "prettier.tabWidth": 2,
    "go.lintTool": "gometalinter",
    "[go]": {
        "editor.formatOnSave": true
    },
    "javascript.updateImportsOnFileMove.enabled": "always"
}
